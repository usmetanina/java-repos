
import java.util.Scanner;
import java.math.BigDecimal;
import java.math.RoundingMode;

public class step4 {
public static void main (String[] args)
{
	int parametr; //число знаков после запятой
	System.out.println("Введите точность сравнения: ");
	Scanner in = new Scanner(System.in);
	parametr=in.nextInt();
	
	
	float a = 0.3f;
	float b = 0.4f;
	float sum = a + b;
	float c = 0.7f;
	//float aaaaa=new BigDecimal(sum).setScale(7, RoundingMode.HALF_UP).floatValue();
	//float bb=new BigDecimal(c).setScale(7, RoundingMode.HALF_UP).floatValue();
	float aaaaa=(float)(Math.round(sum * Math.pow(10, 6)) / Math.pow(10, 6));
	float bb=(float)(Math.round(c * Math.pow(10, 6)) / Math.pow(10, 6));
	System.out.println(aaaaa == bb);
	System.out.println(sum == c);
	System.out.println(compare(sum,c,parametr));
	
	//System.out.println("|f3-f4|<1e-6: "+( Math.abs(sum-c) < 1e-6 ));

	//Float.isNaN(float)
	}

public static boolean compare(float sum,float c,int parametr)
{
	float aaaaa=(float)(Math.round(sum * Math.pow(10, parametr)) / Math.pow(10, parametr));
	float bb=(float)(Math.round(c * Math.pow(10, parametr)) / Math.pow(10, parametr));
	//System.out.println(aaaaa == bb);
	return aaaaa == bb;
	}
public static float round(float value, int scale) {
    return (float)(Math.round(value * Math.pow(10, scale)) / Math.pow(10, scale));
}
}
