import java.math.BigDecimal;
public class step6 {
	public static void main(String[] args)
	{
		float sum = new BigDecimal(500.00000000f).floatValue(); // 500 руб. на счете
		float percent = 0.00000001f; // 0.000001% ежемес€чно
		
		/*float sum1=0;
		float percent1=0;
		float compens=0;*/
		// —читаем проценты за год
		for(int i = 1; i <= 12; i++)
		{
			//percent1=percent-compens;
			//sum1+=sum1*percent;
			//compens=(sum-sum1)-percent1;
		sum += sum*percent;
		}
		System.out.println("—умма на счете через год: " + sum);
	}
}
