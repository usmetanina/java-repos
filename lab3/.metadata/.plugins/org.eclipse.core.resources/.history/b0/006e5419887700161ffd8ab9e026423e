import java.math.BigDecimal;
public class step6 {
	public static void main(String[] args)
	{
		float summa = 500; // 500 руб. на счете
		float per = 0.00000001f; // 0.000001% ежемес€чно
		
		float sum1=0;
		float percent1=0;
		float compens=0;
		// —читаем проценты за год
		for(int i = 1; i <= 12; i++)
		{
			summa += summa*per;
		}
		System.out.println("—умма на счете через год с типом float: " + summa);
		
		BigDecimal sum = new BigDecimal(500.00000000f); // 500 руб. на счете
		BigDecimal percent = new BigDecimal(0.00000001f); // 0.000001% ежемес€чно
		for(int i = 1; i <= 12; i++)
		{
			sum=sum.add(sum.multiply(percent));
		}
		System.out.println("—умма на счете через год с типом BigDecimal: " + sum.setScale(20,BigDecimal.ROUND_HALF_UP));
	}
}
